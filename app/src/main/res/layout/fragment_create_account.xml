<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.fragments.create_account.ui.CreateAccountFragment">




    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="Theme.Material3.DayNight.NoActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/gs_appbar_menu"
        app:popupTheme="@style/Theme.PopupOverlay.Menu">


        <ImageButton
            android:id="@+id/imgLogo"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_netflix"
            android:contentDescription="@string/accounts_logo_desc"/>


    </com.google.android.material.appbar.MaterialToolbar>


    <TextView
        android:id="@+id/txtAccountExists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txtAccountExists"
        android:background="@android:color/holo_orange_dark"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:drawableStartCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/txtTitleCreateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/titleCreateAccount"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAccountExists"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="@string/create_account_desc"
        android:textColor="@color/divider"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintTop_toBottomOf="@id/txtTitleCreateAccount" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintTop_toBottomOf="@id/txtDesc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintTop_toBottomOf="@id/emailTil"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/checkBoxEmailMe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/netflix_offer_email"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintTop_toBottomOf="@id/passwordTil" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_get_started"
        android:text="@string/create_account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:theme="@style/Button.GetStarted"
        app:layout_constraintEnd_toEndOf="@id/txtTitleCreateAccount"
        app:layout_constraintStart_toStartOf="@id/txtTitleCreateAccount"
        app:layout_constraintTop_toBottomOf="@id/checkBoxEmailMe" />


</androidx.constraintlayout.widget.ConstraintLayout>