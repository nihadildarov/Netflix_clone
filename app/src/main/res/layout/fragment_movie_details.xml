<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.movie_details.ui.MovieDetailsFragment">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Text"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txtReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024"
        app:layout_constraintTop_toBottomOf="@id/txtMovieName"
        app:layout_constraintStart_toStartOf="@id/txtMovieName"
        android:textColor="@color/divider"
        />

    <TextView
        android:id="@+id/txtAgeRestriction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtReleaseDate"
        app:layout_constraintBottom_toBottomOf="@id/txtReleaseDate"
        app:layout_constraintStart_toEndOf="@id/txtReleaseDate"
        android:text="16+"
        android:layout_marginStart="8dp"
        android:textColor="@color/divider"
        />

    <TextView
        android:id="@+id/txtSeasonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtReleaseDate"
        app:layout_constraintBottom_toBottomOf="@id/txtReleaseDate"
        app:layout_constraintStart_toEndOf="@id/txtAgeRestriction"
        android:text="1 Season"
        android:layout_marginStart="8dp"
        android:textColor="@color/divider"
        android:drawableEnd="@drawable/ic_comment"
        android:drawablePadding="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>