<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/progressBarStyleLarge"
        app:indicatorColor="@color/red"
        app:layout_constraintTop_toTopOf="@id/cardViewPoster"
        app:layout_constraintBottom_toBottomOf="@id/cardViewPoster"
        app:layout_constraintStart_toStartOf="@id/cardViewPoster"
        app:layout_constraintEnd_toEndOf="@id/cardViewPoster"/>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewPoster"
        android:layout_width="160dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    </com.google.android.material.card.MaterialCardView>



    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@id/cardViewPoster"
        app:layout_constraintBottom_toBottomOf="@id/cardViewPoster"
        app:layout_constraintStart_toEndOf="@id/cardViewPoster"
        app:layout_constraintEnd_toStartOf="@id/imgPlayBtn"
        android:text="MovieName"
        />

    <ImageButton
        android:id="@+id/imgPlayBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_play_circle_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtMovieName"
        app:layout_constraintBottom_toBottomOf="@id/txtMovieName"
        android:layout_margin="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>