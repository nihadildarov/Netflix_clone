<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:editTextColor">@color/white</item>
    </style>


    <style name="SplashScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    
    <style name="Button.Outline" parent="ThemeOverlay.AppCompat">
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edt_til_signin_main</item>
    </style>
</resources>