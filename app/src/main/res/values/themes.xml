<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>

    </style>

    //For changing toolbar three dot menu appearance getStarted fragment
    <style name="Theme.PopupOverlay.Menu" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/dark_gray</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThreeDotStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>



    //Splash screen theme
    <style name="SplashScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>



    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />



    // theme for button outlined
    <style name="Button.Outline" parent="ThemeOverlay.AppCompat">
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="Button.GetStarted" parent="ThemeOverlay.AppCompat">
        <item name="android:shape">rectangle</item>
        <item name="colorPrimary">@color/red</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/divider</item>
        <item name="textFillColor">@color/red</item>
    </style>

</resources>