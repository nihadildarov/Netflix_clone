<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph1"
    app:startDestination="@id/getStartedFragment">

    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.example.myapplication.fragments.getstarted.ui.GetStartedFragment"
        android:label="fragment_get_started"
        tools:layout="@layout/fragment_get_started" >
        <action
            android:id="@+id/action_getStarted_to_signIn"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_getStarted_to_signInMain"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.myapplication.fragments.signin.ui.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.myapplication.fragments.signup.ui.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signInMain_to_createAccount"
            app:destination="@id/createAccountFragment" />
        <action
            android:id="@+id/action_signInMainFragment_to_signInEmailFragment"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.example.myapplication.fragments.accounts.ui.AccountsFragment"
        android:label="fragment_accounts"
        tools:layout="@layout/fragment_accounts" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplication.fragments.home.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/newHotFragment"
        android:name="com.example.myapplication.fragments.new_hot.ui.NewHotFragment"
        android:label="fragment_new_hot"
        tools:layout="@layout/fragment_new_hot" >
        <action
            android:id="@+id/action_finishSignUp_to_newHot"
            app:destination="@id/finishSignUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.myapplication.fragments.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/downloadsFragment"
        android:name="com.example.myapplication.fragments.downloads.ui.DownloadsFragment"
        android:label="fragment_downloads"
        tools:layout="@layout/fragment_downloads" />
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.example.myapplication.fragments.create_account.ui.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createAccount_to_signIn"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_createAccounts_to_accounts"
            app:destination="@id/accountsFragment" />
        <action
            android:id="@+id/action_createAccount_to_verifyEmail"
            app:destination="@id/verifyEmailFragment" />
        <action
            android:id="@+id/action_createAccount_to_newHot"
            app:destination="@id/newHotFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyEmailFragment"
        android:name="com.example.myapplication.fragments.verify_email.ui.VerifyEmailFragment"
        android:label="fragment_verify_email"
        tools:layout="@layout/fragment_verify_email" />
    <fragment
        android:id="@+id/finishSignUpFragment"
        android:name="com.example.myapplication.fragments.finish_signup.ui.FinishSignUpFragment"
        android:label="fragment_finish_sign_up"
        tools:layout="@layout/fragment_finish_sign_up" >
        <action
            android:id="@+id/action_newHot_to_finishSignUp"
            app:destination="@id/newHotFragment" />
    </fragment>

</navigation>